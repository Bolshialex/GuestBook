<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/admin.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>Admin Page</h1>

      <% if(contacts.length > 0) { %>
      <div class="container-list">
        <ul>
          <% contacts.forEach(contact => { %>
          <li class="contact-items">
            <p>
              <strong>Name:</strong> <%= contact.fName %> <%= contact.lName %>
            </p>
            <p><strong>Job Title:</strong> <%= contact.jobTitle %></p>
            <p><strong>Company:</strong> <%= contact.company %></p>
            <p>
              <strong>LinkedIn:</strong>
              <a href="<%= contact.linkedIn %>"><%= contact.linkedIn %></a>
            </p>
            <p><strong>Email:</strong> <%= contact.email %></p>
            <p><strong>Past Meeting:</strong> <%= contact.pastMeeting %></p>
            <p>
              <strong>Other Meeting Notes:</strong> <%= contact.otherMeet %>
            </p>
            <p><strong>Message:</strong> <%= contact.message %></p>
            <p>
              <strong>Mailing List:</strong> <%= contact.mailingList ?
              "Subscribed" : "Not Subscribed" %>
            </p>
            <p><strong>Email Format:</strong> <%= contact.emailFormat %></p>
            <p><strong>Submitted On:</strong> <%= contact.timestamp %></p>
            <% }); %>
          </li>
        </ul>
      </div>
      <% } else { %>
      <div class="empty-list-container">
        <h3>No Contacts</h3>
      </div>

      <% } %>

      <div class="btn-container">
        <a href="/">
          <button class="btn">Back to Form</button>
        </a>
      </div>
    </div>
  </body>
</html>
